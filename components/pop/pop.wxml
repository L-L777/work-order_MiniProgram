<!-- 修改密码弹窗 -->
<van-popup
  show="{{ passwordShow }}"
  round
  closeable
  position="bottom"
  custom-style="height: 70%"
  z-index='1000'
  bind:close="onPasswordClose"
  lock-scroll
  root-portal
>
  <view class="update_password_box">
    <form bindsubmit="passwordSubmit">
      <van-cell-group>
        <van-field
          name="password"
          type="password"
          required
          clearable
          label="密码："
          placeholder="请输入密码："
        />
        
        <van-field
          name="confirmPassword"
          type="password"
          label="确认密码："
          placeholder="请确认密码："
          required
        />
        
       
      </van-cell-group>
      <button formType="submit" class="password-submit-btn">修改密码</button>
    </form>
  </view>
</van-popup>