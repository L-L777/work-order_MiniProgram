/* pages/signHistory/signHistory.wxss */
.history_page{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 50rpx;
}
.history_card{
  background: linear-gradient(to bottom, #E8EEFF, #c3dbf2); /* 渐变色背景 */
  width: 85vw;
  height: 500rpx;
  border-radius: 30px;
  /* z-index: 100; */
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.2); /* 添加阴影效果 */
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 14px;
  box-sizing: border-box;
  padding: 50rpx;
}
.signin_box,.signout_box{
  position: relative;
  width: 100%;
  height: 45%;
  border-bottom: 1px solid #E8EEFF;
}
.sign_detail{
  background: linear-gradient(135deg, #E8EEFF, #c3dbf2);
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.3); /* 添加阴影效果 */
  color: #fff;
  position: absolute;
  bottom: 5%;
  right: 0%;
  width: 120rpx;
  height: 50rpx;
  font-size: 12px;
  font-weight: 700;
  display: flex;
  justify-content: center;align-items: center;
  border-radius: 20px;
}