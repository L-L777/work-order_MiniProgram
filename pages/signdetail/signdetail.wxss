/* pages/signdetail/signdetail.wxss */
.map-container{
  width: 100vw;
}
.myMap{
  width: 100% ;
  height: 500rpx;
}
.signdetail_box{
  width: 100%;
  margin-top: 50rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.sign_title{
  font-size: 18px;
  font-weight: 700;
  color: #999999;
}
.sign_msg{
  margin-top: 20rpx;
  color: #AAAAAA;
  border-bottom: 1px solid #DDDDDD;
}
.sign_description{
  margin-top: 30rpx;
  color: #AAAAAA;
  border-bottom: 1px solid #DDDDDD;
}
.description_content{
  margin-top: 20rpx;
  white-space: normal; /* 确保文本自动换行 */
  word-wrap: break-word; /* 允许在单词内换行 */
  overflow-wrap: break-word; /* 同上，为了兼容性 */
  line-height: 1.5;
}
.sign_img_box{
  margin-top: 50rpx;
  width: 100%;
 
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}
.sign_img{
  margin-top: 20rpx;
  
}
.sign_img_loading {
  width: 180rpx;
  height: 180rpx;
  border-radius: 5px;
  background-color: transparent; /* 灰色背景 */
  display: flex;
  justify-content: center;
  align-items: center;
  animation: spin 1s linear infinite;
}
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}