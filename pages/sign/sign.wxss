/* pages/sign/sign.wxss */
.sign_in_out_page{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 50rpx;
}
.sign_in_out_card{

  background: linear-gradient(to bottom, #E8EEFF, #c3dbf2); /* 渐变色背景 */
  width: 85vw;
  border-radius: 30px;
  /* z-index: 100; */
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.2); /* 添加阴影效果 */
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 14px;
  box-sizing: border-box;
  padding: 50rpx;
  position: relative;
}
.text_box{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.custom-sign-input{
  background-color: transparent !important;
  border-bottom: 1px solid #CCCCCC !important;
}
.uploader_box{
  margin-top: 50rpx;
  display: flex;
  flex-wrap: wrap;
}
.sign-submit-btn{
  width: 80%;
  height: 100rpx;
  position: absolute;
  bottom: -15%;
  border-radius: 20px;
  border: none;
  background: linear-gradient(135deg, #66CCFF, #0099FF); /* 渐变色背景 */
  color: #fff; /* 文字颜色 */
  font-weight: 700;
  display: flex; 
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}