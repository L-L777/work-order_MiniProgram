<!--index.wxml-->
<!-- 登录注册页面 -->
<view class="bgc_box">
  <van-image
  width="100vw"
  height="100%"
  src="/assets/images/login(1).png"
/>
</view>
<view class="change_box">
  <button class="login_form_btn change_btn {{isLoginActive ? 'btn_active' : ''}}" bindtap="onLoginClick">登录</button>
  <button class="register_form_btn change_btn {{!isLoginActive ? 'btn_active' : ''}}" bindtap="onRegisterClick">注册</button>
</view>

<view  class="form_box ">
  <image src="../../assets/svg/logo.svg" class="logo_img"></image>
<!-- 登录表单 -->
  <form wx:if="{{isLoginActive}}" bindsubmit="onSubmit" class="form">
  <van-field
    name="phone"
    label='手机号:'
    placeholder="手机号"
    custom-class="custom-input"
    left-icon="phone-o"
    required
  />
  <van-field
    name="password"
    label='密码:'
    placeholder="密码"
    type="password"
    custom-class="custom-input"
    left-icon="closed-eye"
    required
  />
  <button formType="submit" class="submit-btn">登录</button>
</form>
<!-- 注册表单 -->
<form   wx:else bindsubmit="onSubmit" class="form">
  <van-field
    name="phone"
    label='手机号:'
    placeholder="手机号"
    custom-class="custom-input"
    left-icon="phone-o"
    required
  />
  <van-field
    name="password"
    label='密码:'
    placeholder="密码"
    type="password"
    custom-class="custom-input"
    left-icon="closed-eye"
    required
  />
  <van-field
      name="confirmPassword"
      label='确认密码:'
      placeholder="确认密码"
      type="password"
      custom-class="custom-input"
      left-icon="closed-eye"
      required
    />
  <button formType="submit" class="submit-btn">注册</button>
</form>
</view>


