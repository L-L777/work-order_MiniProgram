/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center; 
  background-color: #f9faff;
}
.bgc_box{
  width: 100%;
  height: 25%;
}
.change_box{
  background-color: transparent;
  width: 350rpx;
  height: 100rpx;
  margin-top: -30%;
  margin-left: -45%;
  z-index: 100;
  border-radius: 30px;
  display: flex;
  font-weight: 700;
  box-shadow: inset 0px 0px 30px rgba(255, 255, 255, 0.5); /* 设置半透明白色内部阴影 */
}
.change_btn{
  width: 50%;height: 100%;
  font-size: 14px;
  display: flex; 
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  background-color: transparent;
  color: #fff;
  border-radius: 30px;
  transition: background-color 0.3s, color 0.3s;
}

.btn_active{
  color: #2363f9;
  background-color: #fff;
}

.form_box{
  width: 90%;
  height: 600rpx;
  z-index: 100;
  background-color: #fff;
  margin-top: 5%;
  border-radius: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.logo_img{
  width: 100rpx;
  height: 100rpx;
  margin-top: 5%;
  margin-bottom: 3%;
  border-radius: 100rpx;
}
.form{
  width: 90%;
  height: 100%；
}
.custom-input{
margin-top: 30rpx !important;
width: 90%;
}
.submit-btn{
  width: 90%;
  height: 100rpx;
  position: absolute;
  bottom: -10%;
  border-radius: 20px;
  border: none;
  background: linear-gradient(135deg, #005aff, #0099FF); /* 渐变色背景 */
  color: #fff; /* 文字颜色 */
  font-weight: 700;
  display: flex; 
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}
